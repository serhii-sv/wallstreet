{
    "openapi": "3.0.0",
    "info": {
        "title": "Sprintbank API",
        "version": "1.0"
    },
    "paths": {
        "/api/v1/login": {
            "post": {
                "summary": "Sign in",
                "description": "Login by email/login, password",
                "requestBody": {
                    "description": "Pass user credentials",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "123e4567-e89b-12d3-a456-426655440000"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@gmail.com"
                                        },
                                        "name": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "John Doe"
                                        },
                                        "login": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "John_Doe"
                                        },
                                        "sex": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "male"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "+7 333 3333"
                                        },
                                        "api_token": {
                                            "type": "string",
                                            "maxLength": 80,
                                            "example": "SYejxLCIpdK3RU7ed2ijjqfIyM0mrbtuiY5ccQA6J0f5ipuSGmupRt3tnmbU"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "email": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The email field is required."
                                                    },
                                                    "collectionFormat": "multi"
                                                },
                                                "password": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The password field is required."
                                                    },
                                                    "collectionFormat": "multi"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/api/v1/register": {
            "post": {
                "summary": "Sign up",
                "description": "User registration",
                "requestBody": {
                    "description": "Request Body",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "email",
                                    "password",
                                    "name",
                                    "password_confirmation"
                                ],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "user1@mail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "PassWord12345"
                                    },
                                    "name": {
                                        "type": "string",
                                        "example": "John Doe"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "id": {
                                            "type": "string",
                                            "example": "123e4567-e89b-12d3-a456-426655440000"
                                        },
                                        "email": {
                                            "type": "string",
                                            "format": "email",
                                            "example": "user@gmail.com"
                                        },
                                        "name": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "John Doe"
                                        },
                                        "login": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "John_Doe"
                                        },
                                        "sex": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "male"
                                        },
                                        "phone": {
                                            "type": "string",
                                            "maxLength": 32,
                                            "example": "+7 333 3333"
                                        },
                                        "api_token": {
                                            "type": "string",
                                            "maxLength": 80,
                                            "example": "SYejxLCIpdK3RU7ed2ijjqfIyM0mrbtuiY5ccQA6J0f5ipuSGmupRt3tnmbU"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid."
                                        },
                                        "errors": {
                                            "properties": {
                                                "email": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The email field is required."
                                                    },
                                                    "collectionFormat": "multi"
                                                },
                                                "password": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The password field is required."
                                                    },
                                                    "collectionFormat": "multi"
                                                },
                                                "name": {
                                                    "type": "array",
                                                    "items": {
                                                        "type": "string",
                                                        "example": "The name field is required."
                                                    },
                                                    "collectionFormat": "multi"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "security": [
        []
    ]
}